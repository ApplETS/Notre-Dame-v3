<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/material_component_lists_single_line_height"
    android:gravity="center_vertical"
    android:paddingStart="@dimen/material_component_lists_icon_left_padding"
    android:paddingEnd="@dimen/material_component_lists_right_padding">

    <TextView
        android:id="@+id/tvInfoProfileItemLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:textSize="@dimen/material_component_lists_two_line_text_size"
        tools:text="Label" />

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tvProfileItemValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:textSize="@dimen/material_component_lists_two_line_secondary_text_size"
        tools:text="Value" />
</LinearLayout>