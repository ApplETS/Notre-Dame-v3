<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <SwitchPreferenceCompat
        app:defaultValue="@bool/default_schedule_show_today_btn_pref"
        app:iconSpaceReserved="false"
        app:key="@string/key_schedule_show_today_btn_pref"
        app:title="@string/label_schedule_show_today_btn_pref" />

    <androidx.preference.SeekBarPreference
        android:defaultValue="@integer/default_schedule_no_visible_days_pref"
        android:key="@string/key_schedule_no_visible_days_pref"
        android:max="@integer/max_schedule_no_visible_days_pref"
        android:title="@string/label_schedule_no_visible_days_pref"
        app:iconSpaceReserved="false"
        app:min="@integer/min_schedule_no_visible_days_pref"
        app:showSeekBarValue="true"
        app:useSimpleSummaryProvider="true" />

    <androidx.preference.SeekBarPreference
        android:defaultValue="@integer/default_schedule_x_scrolling_speed_pref"
        android:key="@string/key_schedule_x_scrolling_speed_pref"
        android:max="@integer/max_schedule_x_scrolling_speed_pref"
        android:title="@string/label_schedule_x_scrolling_speed_pref"
        app:iconSpaceReserved="false"
        app:min="@integer/min_schedule_x_scrolling_speed_pref"
        app:showSeekBarValue="true"
        app:useSimpleSummaryProvider="true" />

    <androidx.preference.SeekBarPreference
        android:defaultValue="@integer/default_schedule_scroll_duration_pref"
        android:key="@string/key_schedule_scroll_duration_pref"
        android:max="@integer/max_schedule_scroll_duration_pref"
        android:title="@string/label_schedule_scroll_duration_pref"
        app:iconSpaceReserved="false"
        app:min="@integer/min_schedule_scroll_duration_pref"
        app:showSeekBarValue="true"
        app:useSimpleSummaryProvider="true" />
</PreferenceScreen>