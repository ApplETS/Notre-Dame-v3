<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/delta_jaeger_light</item>
        <item name="fontFamily">@font/delta_jaeger_light</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Set title color -->
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!-- Login screen theme. -->
    <style name="LoginTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:fontFamily">@font/delta_jaeger_light</item>
        <item name="fontFamily">@font/delta_jaeger_light</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LoginErrorTextAppearance" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/material_yellow_500</item>
        <item name="android:fontFamily">@font/delta_jaeger_light</item>
        <item name="fontFamily">@font/delta_jaeger_light</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- About screen theme -->
    <style name="AboutTheme" parent="AppTheme">
        <item name="colorPrimary">@color/appletsBg</item>
        <item name="colorPrimaryDark">@color/appletsBg</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textColorLink">@android:color/white</item>
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:fontFamily">@font/delta_jaeger_light</item>
        <item name="fontFamily">@font/delta_jaeger_light</item>
    </style>
</resources>
